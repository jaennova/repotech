---

<Layout title="RecursosTech - Recursos para desarrolladores">
  <div class="max-w-screen-xl mx-auto">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Sidebar with filters - Fixed on desktop -->
      <div class="w-full lg:w-64 lg:flex-shrink-0">
        <div class="lg:sticky lg:top-4">
          <FilterSection client:load className="w-full" />
        </div>
      </div>

      <!-- Main content -->
      <div class="flex-1">
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Explora Recursos Tecnol√≥gicos
          </h1>
        </div>

        <ResourceList client:load />
      </div>
