---
import Layout from '../layouts/Layout.astro';
import ResourceList from '../components/ResourceList.svelte';
import SearchBar from '../components/SearchBar.svelte';
import TagFilter from '../components/TagFilter.svelte';
---

<Layout title="RecursosTech - Recursos para desarrolladores">
  <div class="max-w-screen-xl mx-auto relative">
    <div class="flex gap-8">
      <!-- Sidebar fijo -->
      <div class="w-64 flex-shrink-0">
        <div class="sticky top-4">
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Filtros</h2>
            
            <!-- Search Bar -->
            <div class="mb-6">
              <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Buscar</h3>
              <SearchBar client:load />
            </div>
            
            <!-- Tag Filter -->
            <TagFilter client:load />
          </div>
        </div>
      </div>

      <!-- Main content -->
      <div class="flex-1">
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Explora Recursos Tecnológicos
          </h1>
          <p class="text-gray-600 dark:text-gray-400">
            Únete a nuestro directorio curado para aumentar tu visibilidad en la industria del software.
          </p>
        </div>

        <ResourceList client:load />
      </div>
    </div>
  </div>
</Layout>